<% provide(:title, "Sign in") %>
<h1>Sign In</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= image_submit_tag 'email_signin.png' %>
    <% end %>

    <span id="fb_sign_in"><img src="assets/fb_login.png"></span>


    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
