<header class="navbar navbar-fixed-top navbar-default">
  <div class="navbar-inner">

      <div class = "home_button">
        <%= link_to image_tag("logo.png", alt: "logo", height:'40', width:'40'), root_path, id: "logo" %>
      </div>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to "Users", users_path, class: "navbar_text" %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="navbar_text">Account</span> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user, class: "navbar_text" %></li>
                <li><%= link_to "Settings", edit_user_path(current_user), class: "navbar_text" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete", class: "navbar_text" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path, class: "navbar_text" %></li>
          <% end %>
        </ul>
      </nav>

  </div>
</header>
