<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<%= link_to "Profile Me!", firstbite_url , class: "btn btn-large btn-primary" %>

	<br><br><br><br><br><br><br>


	<div class="taste_profile">
		<div class = "profile_bits">
			<div class = "profile_bits_text">
				<%= display_profile_bits %>
			</div>
		</div>
		<br><br>
		<div class= "five_movies" >
			<div class = "five_text">
				Today's 5 Movies
			</div>
		</div>
		<br><br>
		<div class= "five_songs" >
			<div class = "five_text">
				Today's 5 Songs
			</div>
		</div>
		<br><br>
		<div class= "five_celebs" >
			<div class = "five_text">
				Most Similar Celebs
			</div>
		</div>
	</div>

	<div>
		<%= @adventurousness %>
		<%= current_user.adventurousness_affinity %>
		<%= @instinctiveness %>
		<%= current_user.instinctiveness_affinity %>
		<%= @pace %>
		<%= current_user.pace_affinity %>
		<%= @valence %>
		<%= current_user.valence_affinity %>
	</div>

	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
	</div>
</div>