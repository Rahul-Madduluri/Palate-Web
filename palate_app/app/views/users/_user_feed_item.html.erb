<div class = "pin_user">
	<% if user_feed_item.is_a? Micropost %>

		<div class = "feed_gravatar">
			<%= link_to gravatar_for(user_feed_item.user), user_feed_item.user %>
		</div>

		<div id = "username">
			<%= link_to user_feed_item.user.name, user_feed_item.user %>
		</div>

		<br>
	<% end %>

	<div class ="hr">
		<hr>
	</div>

	<div id="feed_content">
		<% if user_feed_item.is_a? Micropost %>
			<%= url_link(user_feed_item.content) %>
		<% end %>
	</div>

	<div id="timeago">
		Posted <%= time_ago_in_words(user_feed_item.created_at) %> ago.
	</div>
    
    <% if (user_feed_item.is_a? Micropost) %>
		<% if current_user?(user_feed_item.user) %>
			<%= link_to "delete", user_feed_item, method: :delete,
		                                 data: { confirm: "You sure?" },
		                                 title: user_feed_item.content %>
		<% end %>
	<% end %>

</div>